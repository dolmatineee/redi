<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:gravity="center_horizontal"
    tools:context=".Activities.OTPActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#3A3A3A"
        android:textSize="25sp"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the 6 digit numbers sent to your email"
        android:textSize="15sp"
        android:textColor="#A7A7A7"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:weightSum="6"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:maxLength="1"
            android:id="@+id/otpEditText1"
            android:maxLines="1"
            android:inputType="number"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/otp_custom_bg"/>

        <EditText
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:maxLength="1"
            android:id="@+id/otpEditText2"
            android:layout_marginStart="15dp"
            android:maxLines="1"
            android:inputType="number"
            android:gravity="center"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/otp_custom_bg"/>

        <EditText
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/otpEditText3"
            android:maxLength="1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:maxLines="1"
            android:inputType="number"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/otp_custom_bg"/>

        <EditText
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/otpEditText4"
            android:maxLength="1"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:maxLines="1"
            android:inputType="number"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/otp_custom_bg"/>

        <EditText
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/otpEditText5"
            android:maxLength="1"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:maxLines="1"
            android:inputType="number"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/otp_custom_bg"/>

        <EditText
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:maxLength="1"
            android:id="@+id/otpEditText6"
            android:maxLines="1"
            android:inputType="number"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/otp_custom_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you didnâ€™t receive code, "
            android:textColor="#A7A7A7"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/otpResendTextView"
            android:text="resend after 1:00"
            android:textColor="#A7A7A7"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/sign_custom_button"
        android:text="Set New Password"
        android:id="@+id/otpSetNewButton"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:enabled="false"/>
</LinearLayout>