<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:gravity="center_horizontal"
    tools:context=".Activities.PasswordChangeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#3A3A3A"
        android:textSize="25sp"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter new password"
        android:textSize="15sp"
        android:textColor="#A7A7A7"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_medium"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="40dp"
        android:textColor="#A7A7A7"
        android:fontFamily="@font/roboto_medium"
        android:textSize="15sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordChangePasswordEditText"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign_custom_edittext"
        android:hint="************"
        android:textColorHint="#CFCFCF"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:layout_marginTop="20dp"
        android:textColor="#A7A7A7"
        android:fontFamily="@font/roboto_medium"
        android:textSize="15sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordChangeConfPasswordEditText"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign_custom_edittext"
        android:hint="************"
        android:textColorHint="#CFCFCF"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:padding="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:id="@+id/passwordChangeButton"
        android:textColor="@color/white"
        android:enabled="false"
        android:background="@drawable/sign_custom_button"
        android:layout_marginTop="80dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_bold"/>
</LinearLayout>